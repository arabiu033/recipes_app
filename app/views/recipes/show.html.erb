<h2><%= @recipe.name %></h2>
<div>
  <div>
    <p>Preparation time: <%= @recipe.preparation_time %> hour</p>
    <p>Cooking time: <%= @recipe.cooking_time %> hour</p>
    <p><%= @recipe.description %></p>
  </div>
  <label for="public">Public</label>
  <input type="checkbox" id="public" name="public" value="1" />
</div>
<div>
  <%= link_to 'Generate shoping list', recipe_path(@recipe) %>
  <%= link_to 'Add Ingridients', new_food_path(:recipe => @recipe) if can? :create, @recipe %>
</div>
<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |f| %>
      <tr>
        <td><%= f.food.name %></td>
        <td><%= f.food.quantity_value %></td>
        <td><%= f.food.value_price %></td>
        <td><%= link_to 'Remove', recipe_path(@recipe), data: { turbo_method: "delete", confirm: 'Are you sure?' } if can? :destroy, f.food %></td>
      </tr>
    <% end %>
  </tbody>